							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"var books = pm.collectionVariables.get('listOfBooks');\r",
									"if (books.length > 0) {\r",
									"    pm.collectionVariables.set('bookId', books.shift());\r",
									"    pm.execution.setNextRequest(\"addListOfBooks\")\r",
									"}\r",
									"pm.collectionVariables.set('listOfBooks', books);"
								],
